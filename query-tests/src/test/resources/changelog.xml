<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="gubber">
        <createTable tableName="DOGS" schemaName="PUBLIC">
            <column name="ID" autoIncrement="true" type="bigint"/>
            <column name="ALIVE" type="boolean"/>
            <column name="BIRTH_DATE" type="timestamp"/>
            <column name="FATHER_ID" type="bigint"/>
            <column name="FULL_NAME" type="varchar(25)"/>
            <column name="MOTHER_ID" type="bigint"/>
            <column name="NICK_NAME" type="varchar(100)"/>
        </createTable>
        <loadData tableName="DOGS" catalogName="PUBLIC" file="db/data/dogs.csv"/>
    </changeSet>
</databaseChangeLog>